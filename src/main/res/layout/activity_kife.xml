<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nutomic.syncthingandroid.kife.KifeActivity">

    <LinearLayout
        android:id="@+id/lin_buttons"
        style="@style/ww"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button"
            style="@style/ww"
            android:onClick="restartService"
            android:text="Restart" />

        <Button
            android:id="@+id/button5"
            style="@style/ww"
            android:onClick="shutdown"
            android:text="Shutdown" />

        <Button
            android:id="@+id/button3"
            style="@style/ww"
            android:onClick="connections"
            android:text="Connections"
            android:visibility="gone" />

        <Button
            android:id="@+id/button2"
            style="@style/ww"
            android:onClick="devices"
            android:text="Devices"
            android:visibility="gone" />

        <Button
            android:id="@+id/button4"
            style="@style/ww"
            android:onClick="folders"
            android:text="Folder"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:id="@+id/indicator"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:background="@color/green" />

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginTop="50dp" android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/tw1"
                android:text="id" />

            <TextView
                style="@style/tw1"
                android:text="label" />

            <TextView
                style="@style/tw1"
                android:text="path" />

            <TextView
                style="@style/tw1"
                android:text="state" />

            <TextView
                style="@style/tw1"
                android:text="percentage" />

            <TextView
                style="@style/tw1"
                android:text="items" />

            <TextView
                style="@style/tw1"
                android:text="size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tw_id"
                style="@style/tw2" />

            <TextView
                android:id="@+id/tw_label"
                style="@style/tw2" />

            <TextView
                android:id="@+id/tw_path"
                style="@style/tw2" />

            <TextView
                android:id="@+id/tw_state"
                style="@style/tw2" />

            <TextView
                android:id="@+id/tw_percentage"
                style="@style/tw2" />

            <TextView
                android:id="@+id/tw_items"
                style="@style/tw2" />

            <TextView
                android:id="@+id/tw_size"
                style="@style/tw2" />

            <TextView
                android:id="@+id/tw_total"
                style="@style/tw2" />

            <TextView
                android:id="@+id/tw_up"
                style="@style/tw2" />

            <TextView
                android:id="@+id/tw_down"
                style="@style/tw2" />
        </LinearLayout>

        <ListView
            android:id="@+id/list"
            android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="3"
            android:layout_marginRight="20dp"
            ></ListView>

    </LinearLayout>
</RelativeLayout>
